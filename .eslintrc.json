{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "extends": [
    "prettier",
    "plugin:prettier/recommended",
    "plugin:import/recommended",
    "plugin:import/typescript",
    "plugin:@typescript-eslint/recommended"
  ],
  "env": {
    "node": true,
    "es6": true
  },
  "overrides": [
    {
      "files": ["*.spec.ts"],
      "env": {
        "node": true,
        "jest": true
      }
    }
  ]
}
